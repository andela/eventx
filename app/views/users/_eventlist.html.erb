<%  @events.each do |event| %>
<tr>
  <td><%= event.title %></td>
  <td><%= event.location %></td>
  <td><%= event.start_date.strftime("%d %B, %Y") %></td>
  <!-- <td>Opened</td> -->
  <td><a href="" class="dropdown-button btn-floating btn waves-effect waves-light transparent z-depth-0" data-activates="dropdown-<%= "#{event.id}" %>"><i class="fa fa-ellipsis-v" style="color: black;" ></i></a></td>
  <ul class="dropdown-content" id="dropdown-<%= "#{event.id}" %>">
    <li data-eventId="<%= event.id %>"><%= link_to "Edit Event", edit_event_path(event), id:"edit-event", class:"our-dropdown-content", data: {eventid: event.id } %></li>
    <li data-eventId="<%= event.id %>"><%= link_to "Enable Event", enable_event_path(event), id:"enable-event", class:"our-dropdown-content", data: {eventid: event.id } %></li>
    <li data-eventId="<%= event.id %>"><%= link_to "Disable Event", disable_event_path(event), id:"disable-event", class:"our-dropdown-content", data: {eventid: event.id } %></li>
    <!-- <li><a class="our-dropdown-content" href="">View Event</a></li> -->
    <li><%= link_to "View Event", event, class: "our-dropdown-content" %></li>
    <li><a class="our-dropdown-content" href="">View Ticket</a></li>
    <li><%= link_to "Manage Staffs", manage_staffs_path(event), class:"our-dropdown-content", data: {eventid: event.id } %></li>
  </ul>
</tr>
<% end %>
