<% if @event.end_date && @event.end_date > Time.zone.now %>
<div id="att2">
  <% if !@event.enabled %>
    <%= link_to "Cancelled", "#", class: "btn waves-effect waves-light btn-large our-btn-green red darken-4" %>
  <% else %>
    <%= attend_event_or_login( "Attend this event", nil, @var1, @var2) unless user_is_attending_event %>

    <%= link_to "Unattend", unattend_path(event_id: @event.id), method: :get,
                class: "btn waves-effect waves-light btn-large our-btn-green red darken-4", data: {id: "attend"},id: "attend", remote: :true  if user_is_attending_event %>
  <% end %>
</div>
<% end %>
