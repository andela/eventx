<div class="parallax-container" id="index-banner">
    <%= render partial: "layouts/nav" %>
  <div class="section no-pad-bot">
    <div class="container">
    <span class="hide-on-med-and-down"><br><br></span>
      <h1 class="header center home_app_title">EventX</h1>
      <div class="row center">
        <h5 class="header col s12 light home_app_tag">Simple, Easy, Build it</h5>
      </div>
      <div class="row center">
    
        <%= create_event_or_login('Create Event') %>
      </div>
      <span class="hide-on-med-and-down"><br><br></span>
    </div>
  </div>
  <div class="parallax"><%= image_tag 'best.jpg'%></div>
  <div class="container header center search_form l8 m8 s8 offset-s2">
    <%= render partial: 'welcome/search' %>
  </div>
  <a href="#featured_events" class="alert-scroll-under"><%= image_tag('scroll_circle.svg', class: 'responsive')%></a>
</div>



<div id="featured_events" class="event-section row remove-margin">
  <div class="col s12" style="padding: 0px 0px">
    <ul class="tabs">
      <li class="tab col s3">
        <a class="active" href="#test1">FEATURED</a>
      </li>
      <li class="tab col s3">
        <a href="#test2">LATEST</a>
      </li>
      <li class="tab col s3">
        <a href="#test3">POPULAR</a>
      </li>
    </ul>
  </div>
  <div class="col s12" id="test1">
    <div class="content-set">
      <div class="row scrollblock" id="examples-transition">
        <% 12.times do %>
        <div class="col l4 s12 m4 hideme" id="fade-in">
          <div class="card small card-shadow" id="card">
            <div class="Amount">Free</div>
            <div class="card-image waves-effect waves-block waves-light">
              <%= image_tag "office.jpg" %>
            </div>
            <div class="card-content">
              <span class="card-title grey-text text-darken-4">
                <i class="fa fa-clock-o"></i>
                WED, JUL 29 5:00 PM
              </span>
              <p>2nd Annual Women in Business and Leadership Summit 2015</p>
            </div>

            <div class="card-action">
              <span class="card-title grey-text text-darken-4">
                <i class="fa fa-map-marker"></i>
                LEKKI LAGOS
                <i class="material-icons right activator pointer tooltipped" data-delay="50" data-position="bottom" data-tooltip="view more">more_vert</i>
              </span>
            </div>
            <div class="card-reveal">
              <span class="card-title grey-text text-darken-4">Card Title
                <i class="material-icons right">close</i>
              </span>
              <p>Here is some more information about this product that is only revealed once clicked on.</p>
            </div>
          </div>
        </div>
        <% end %>
        <div class="center">
          <a class="btn-large grey z-depth-0" href="/events/show">SEE MORE</a>
        </div>
      </div>
    </div>
  </div>

</div>
<div class="col s12" id="test2">Test 2</div>
<div class="col s12" id="test3">Test 3</div>

<div class="near-footer">
  <h4>Create your own event</h4>

  <p>Bring people together, or turn your passion into a business.
    <br>
    EventX gives you everything you need to host your best event yet.</p>

  <%= link_to "Create Event", events_new_path, data: { no_turbolink: true }, class: "btn-large bottom_btn z-depth-0"  %>


</div>
