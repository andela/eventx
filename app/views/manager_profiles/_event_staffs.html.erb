<li class="collection-item avatar">
  <img src="<%= staff.user.profile_url %>" alt="User Image" class="circle">
  <span class="title"><%= staff.role.capitalize.tr("_", " ")%></span>
  <p><%= staff.user.first_name%><br>
   <span class="emails"><%= staff.user.email%></span>
  </p>
  <% if can? :delete, EventStaff, event_id: @event.id %>
    <a href="<%= remove_staff_path(event_staff_id: staff.user_id, 
      event_id: @event.id) %>" 
      data-confirm="Are you sure you want to delete this staff ?">
    <i class="material-icons secondary-content">delete</i></a>
  <% end %>
</li>
