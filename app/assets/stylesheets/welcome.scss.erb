.Amount{
  background-color: rgba(255,255,255,.75);
  text-transform: uppercase;
  font-size: 12px;
  line-height: 20px;
  color: rgba(0,0,0,.8);
  box-sizing: border-box;
  padding: 2px 10px;
  position: absolute;
  display: inline-block;
  top: 10px;
  right: 10px;
  z-index: 50;
}

.card .card-reveal {
  padding: 20px;
  position: absolute;
  background-color: #fff;
  width: 100%;
  overflow-y: auto;
  top: 100%;
  height: 100%;
  z-index: 51;
  display: none;
}



.remove-margin{
  margin: 0;
}

.tabs .indicator {
  position: absolute;
  bottom: 0;
  height: 2px;
  background-color: #FFE0A6;
  will-change: left, right;
}

.tabs .tab a {
  color: #FFE0A6;
  display: block;
  width: 100%;
  height: 100%;
  -webkit-transition: color 0.28s ease;
  -moz-transition: color 0.28s ease;
  -o-transition: color 0.28s ease;
  -ms-transition: color 0.28s ease;
  transition: color 0.28s ease;
}


